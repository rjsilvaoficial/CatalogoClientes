@using PagedList.Mvc;
@model PagedList.IPagedList<CatalogoClientes.Dominio.Entidades.Cliente>

@{
    ViewBag.Title = "Catalogo";
}

@foreach (var p in Model)
{
    @Html.Partial("_CatalogoResumo", p)
}

@*O p abaixo comporta o número da página e o total de páginas*@
<p class="text-primary">
    Página @Model.PageNumber de @Model.PageCount
</p>

<span class="btn-group pull-right">
    @Html.PagedListPager(Model, pagina => Url.Action("Catalogo", new { pagina }))
</span>



               