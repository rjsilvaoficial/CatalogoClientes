@model CatalogoClientes.Dominio.Entidades.Cliente

@{
    ViewBag.Title = "Delete";
}

<div class="clientes panel panel-primary">
    <div class="panel-heading panel-head">Cadastro de clientes</div>
    <div class="panel-body">
        <h3>Deseja excluir este cliente?</h3>
        <div>
            <h4>Cliente</h4>
            <hr />
            <dl class="dl-horizontal">

                @if (Model.Imagem != null)
                {
                    <dt>
                        Imagem
                    </dt>
                    <dd>
                        <img src="@Url.Action("ExibirImagem","arquivo", new {id = Model.ClienteId})"
                             width="150" height="150" />
                    </dd>

                }
                else
                {
                    <dt>
                        Imagem
                    </dt>
                    <dd>
                        <img src="~/images/noPicture.png"
                             width="150" height="150" />
                    </dd>
                }
                <dt>
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Nome)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Email)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Email)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Endereco)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Endereco)
                </dd>




            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Excluir" class="btn btn-danger" />@Html.ActionLink("Retornar", "Catalogo", null, new { @class = "btn btn-default" })
        </div>
            }
        </div>
    </div>
</div>